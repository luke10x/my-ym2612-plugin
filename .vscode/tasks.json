{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "presentation": { "panel": "shared", "reveal": "always" },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Debug", "--parallel"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true },
            "presentation": { "panel": "shared", "reveal": "always" },
            "problemMatcher": "$gcc",
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Build (Release)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release", "--parallel"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "presentation": { "panel": "shared", "reveal": "always" },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Install: VST3 (macOS)",
            "type": "shell",
            "command": "cp",
            "args": [
                "-r",
                "build/SquareWaveSynth_artefacts/Debug/VST3/YM2612 Synth.vst3",
                "${env:HOME}/Library/Audio/Plug-Ins/VST3/"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "presentation": { "panel": "shared" },
            "problemMatcher": [],
            "dependsOn": "CMake: Build (Debug)"
        }
    ]
}
