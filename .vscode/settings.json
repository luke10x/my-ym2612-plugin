{
    // Use the compile_commands.json generated by CMake for the most accurate
    // IntelliSense (exact flags, defines, and include paths the compiler sees).
    // Generate it with: cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON ...
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

    // Fall back to the c_cpp_properties.json config when compile_commands
    // isn't present yet (e.g. before first build).
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // Suppress the "select a configuration" prompt â€“ Mac is the primary target.
    "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",

    // Keep the file explorer clean.
    "files.exclude": {
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },

    // CMake integration
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureArgs": [
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
    ]
}
